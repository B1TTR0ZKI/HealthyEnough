import 'package:flutter/material.dart';
// import 'package:healthy_enough/artificial_intelligence/connection.dart';

class AnalyzerPage extends StatefulWidget {
  const AnalyzerPage({super.key});

  @override
  State<AnalyzerPage> createState() => _AnalyzerPageState();
}

class _AnalyzerPageState extends State<AnalyzerPage> {
  String prompt = "what is life"; // Empty string initially
  // final myController = TextEditingController();
  // late final conn;

  @override
  void initState() {
    super.initState();
    // conn = await EnoughAi();
  }

  @override
  void dispose() {
    // myController.dispose();
    super.dispose();
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      floatingActionButton: FloatingActionButton(
        onPressed: () {},
      ),
      body: Center(
        child: Column(
          children: [
            Row(
              children: [
                const TextField(
                  // controller: myController,
                  decoration: InputDecoration(
                    hintText: 'Enter a prompt',
                  ),
                ),
                ElevatedButton(
                  onPressed: () {
                    final response = await conn.promptGen(myController.text);
                    setState(() {
                      prompt = response;
                    });
                  },
                  child: const Text('Submit'),
                ),
              ],
            ),
            Text(
              prompt.isEmpty ? 'Waiting for response...' : prompt,
              style: const TextStyle(
                fontSize: 24,
              ),
            ),
          ],
        ),
      ),
    );
  }
}
